<TMPL_INCLUDE NAME="header.tmpl">
<body>
<TMPL_IF NAME=CONFIRM>
<script language="javascript">window.opener.location.reload();</script>
</TMPL_IF>
<div align="center">
<h2>設定 Quota</h2>
<form method="get" action="set_quota.pl">
<input type="hidden" name="profile" value="<TMPL_VAR NAME=PROFILE>" />
<input type="hidden" name="uid" value="<TMPL_VAR NAME=UID>" />
<input type="hidden" name="uidnumber" value="<TMPL_VAR NAME=UIDNUMBER>" />
<table border="1">
<tbody>
<tr class="odd">
    <th>UID</th><td><TMPL_VAR NAME=UID> (<TMPL_VAR NAME=UIDNUMBER>)</td>
</tr>
<tr>
    <th>QUOTA SIZE</th><td><select name="quota">
<option value="<TMPL_VAR NAME=QUOTA>" selected="selected">(<TMPL_VAR NAME=QUOTA>)</option>
<TMPL_LOOP NAME=LOOP_QUOTA>
<option value="<TMPL_VAR NAME=quota>"><TMPL_VAR NAME=quota></option>
</TMPL_LOOP>
</select></td>
</tr>
<tr class="odd">
    <th>CONFIRM</th><td><input type="checkbox" name="confirm" value="1"<TMPL_IF NAME=CONFIRM> checked="checked"</TMPL_IF> /></td>
</tr>
<tr>
    <td colspan="2" style="text-align: center;">
        <input type="submit" />
        <input type="button" value="取消" onclick="javascript:window.close()" />
    </td>
</tr>
</tbody>
</table>
</form>
<pre>
<TMPL_VAR NAME=RESULT>
</pre>
</div>
</body>
<TMPL_INCLUDE NAME="footer.tmpl">
